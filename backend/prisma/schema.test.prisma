generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-test"
}

datasource db {
  provider = "sqlite"
  url      = env("TEST_DATABASE_URL")
}

model usuarios {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  senha_hash String
  created_at DateTime?   @default(now())
  celulares  celulares[]
  pecas      pecas[]
  movimentacoes movimentacoes_estoque[]
}

model clientes {
  id            Int       @id @default(autoincrement())
  nome          String
  cpf           String    @unique
  telefone      String?
  email         String?
  tipo          String
  data_cadastro DateTime? @default(now())

  ordens_servico ordens_servico[]
  vendas         vendas[]
}

model celulares {
  id                     Int       @id @default(autoincrement())
  modelo                 String
  imei                   String    @unique
  cor                    String?
  capacidade             String?
  valor_compra           Decimal?
  garantia_padrao_dias   Int       @default(365)
  defeitos_identificados String?
  tipo                   String
  status                 String    @default("EmEstoque")
  data_cadastro          DateTime? @default(now())
  nome_fornecedor        String
  usuario_cadastro_id    Int?
  usuario_cadastro       usuarios? @relation(fields: [usuario_cadastro_id], references: [id])
  created_by             Int?      @default(1)
  updated_by             Int?      @default(1)
  updated_at             DateTime? @updatedAt

  ordens_servico ordens_servico[]
  historico       celulares_historico[]
  vendas          vendas[]
  movimentacoes   movimentacoes_estoque[]
}

model pecas {
  id                   Int       @id @default(autoincrement())
  nome                 String
  codigo_interno       String    @unique
  compatibilidade      String?
  quantidade           Int       @default(0)
  garantia_padrao_dias Int       @default(90)
  data_cadastro        DateTime? @default(now())
  nome_fornecedor      String
  usuario_cadastro_id  Int?
  usuario_cadastro     usuarios? @relation(fields: [usuario_cadastro_id], references: [id])
  created_by           Int?      @default(1)
  updated_by           Int?      @default(1)
  updated_at           DateTime? @updatedAt

  ordens_servico_usos ordens_servico_pecas[]
  movimentacoes       movimentacoes_estoque[]
}

model ordens_servico {
  id                Int                 @id @default(autoincrement())
  cliente_id        Int
  celular_id        Int
  descricao         String?
  status            String              @default("EmAndamento")
  data_abertura     DateTime?           @default(now())
  data_conclusao    DateTime?
  garantia_dias     Int?
  garantia_validade DateTime?
  observacoes       String?
  created_by        Int?                @default(1)
  updated_by        Int?                @default(1)
  updated_at        DateTime?           @updatedAt

  cliente clientes @relation(fields: [cliente_id], references: [id])
  celular celulares @relation(fields: [celular_id], references: [id])
  historico celulares_historico[]
  pecas_utilizadas ordens_servico_pecas[]
}

model celulares_historico {
  id               Int               @id @default(autoincrement())
  celular_id       Int
  ordem_servico_id Int?
  tipo_evento      String
  descricao        String
  data_evento      DateTime?         @default(now())

  celular       celulares      @relation(fields: [celular_id], references: [id])
  ordem_servico ordens_servico? @relation(fields: [ordem_servico_id], references: [id])
}

model ordens_servico_pecas {
  id               Int             @id @default(autoincrement())
  ordem_servico_id Int
  peca_id          Int
  quantidade       Int
  data_uso         DateTime?       @default(now())

  ordem_servico ordens_servico @relation(fields: [ordem_servico_id], references: [id])
  peca          pecas           @relation(fields: [peca_id], references: [id])

  @@unique([ordem_servico_id, peca_id], name: "ordem_servico_peca_unique")
}

model vendas {
  id               Int      @id @default(autoincrement())
  cliente_id       Int
  celular_id       Int
  data_venda       DateTime? @default(now())
  valor_venda      Decimal?
  garantia_dias    Int?
  garantia_validade DateTime?
  observacoes      String?
  created_by       Int?     @default(1)
  updated_by       Int?     @default(1)
  updated_at       DateTime? @updatedAt

  cliente clientes @relation(fields: [cliente_id], references: [id])
  celular celulares @relation(fields: [celular_id], references: [id])
}

model movimentacoes_estoque {
  id                Int       @id @default(autoincrement())
  tipo_item         String
  tipo_operacao     String
  celular_id        Int?
  peca_id           Int?
  quantidade        Int
  saldo_resultante  Int?
  observacoes       String?
  data_movimentacao DateTime? @default(now())
  usuario_id        Int

  usuario usuarios @relation(fields: [usuario_id], references: [id])
  celular celulares? @relation(fields: [celular_id], references: [id])
  peca     pecas?    @relation(fields: [peca_id], references: [id])
}
